<h1>Редактировать {{course.title}}</h1>

<form method="post" action="/courses/edit/{{course.id}}?_method=PUT">
    <div class="input-field ">
          <input placeholder="Ведитье Название курса" id="title" type="text" name="title" class="validate" required value="{{course.title}}">
          <label for="title">Название курса</label>
          <span class="helper-text" data-error="Ведитье Название курса" ></span>
        </div>

    <div class="input-field "> 
          <input placeholder="Ведитье Цена курса" id="price" type="number" name="price" class="validate" required min="1" value="{{course.price}}">
          <label for="price">Цена курса</label>
          <span class="helper-text" data-error="Ведитье цену" ></span>
        </div>

    <div class="input-field ">
          <input placeholder="Ведитье URL картинки" id="img" type="text"  name="img" class="validate" required value="{{course.img}}">
          <label for="img">URL картинки</label>
          <span class="helper-text" data-error="Ведитье URL картинки" ></span>
        </div>
         <input type="hidden" name="id" value="{{course.id}}">

        <button type="submit" class="btn btn-primary" >Редактировать</button>

</form> 
<form action="/courses/remove/{{course.id}}?_method=DELETE" method="post" style="margin-top: 10px">
  <input type="hidden" name="id" value="{{course.id}}">
        <button type="submit" class="btn btn-primary red" >Удалить Курс</button>


</form>